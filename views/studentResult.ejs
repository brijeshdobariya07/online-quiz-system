<%- include('./partials/dashboard-header') -%>

<div class="dashboard-container">
	<div class="head">
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="30"
			height="30"
			fill="currentColor"
			class="bi bi-person-fill"
			viewBox="0 0 16 16"
		>
			<path
				d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"
			/>
		</svg>
		<p class="welcome-msg">Welcome <%=name %></p>
		<a href="/users/logout" class="btn btn-primary"
			><i class="fas fa-sign-out-alt"></i> Logout</a
		>
	</div>
	<div class="content">
		<div class="left">
			<ul>
				<li>
					<a href="/dashboard"><i class="fas fa-home"></i> Home</a>
				</li>
				<li>
					<a href="/users/tests/<%=name%>"
						><i class="fas fa-folder-open"></i> Your Quizs</a
					>
				</li>
				<li>
					<a href="/users/custom/<%=name%>"
						><i class="fas fa-tools"></i> Custom Quiz</a
					>
				</li>
				<li>
					<a href="/users/result/<%=name%>"
						><i class="fas fa-trophy"></i> Result</a
					>
				</li>
			</ul>
			<div>
				<p>Logged in as :</p>
				<p style="font-size: 1.7rem"><%=name%></p>
			</div>
		</div>
		<div class="right">

            <div class="view-test-details">
                <h4 style="font-size: 1.5rem">
                    <i class="fas fa-file-alt"></i>&ensp;Test Name :
                    <%= students != '' ? students[0].testName : '' %>
                </h4>
                <h4 style="font-size: 1.2rem">
                    <i class="fas fa-key"></i> Test Code : <%=students != '' ? students[0].testCode : '' %>
                </h4>
            </div>

            <table class="table result">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Roll No</th>
                    <th scope="col">Marks</th>
                  </tr>
                </thead>
                <tbody>
                    <% let i = 1 %>
                    <% students.forEach((stud)=>{ %>

                        <tr>
                            <th scope="row"><%=i%></th>
                            <td><%=stud.name%></td>
                            <td><%=stud.rollno%></td>
                            <td><%=stud.marks%></td>
                        </tr>
                        <% i++ %>
                    <% }) %>
                </tbody>
              </table>

              <%/* %>
            <div class="myExamDetails">
                <% examDetails.forEach((details)=>{ %>

                    <a href="/users/result/<%=name%>/<%=details.testCode%>" class="allTest">
                        <div class="tests">
                            <h4><i class="fas fa-file-alt" style="margin-right: 1rem;"></i> Test Name : <%= students != '' ? details.testName : ''%> </h4>
                            <h5><i class="fas fa-key" style="margin-right: 1rem;"></i> Test Code : <%=students != '' ? details.testCode : ''%></h4>
                        </div>
                    </a>

                <%  }) %>
            </div>
            <% */%>

        </div>
	</div>
</div>
<%- include('./partials/dashboard-footer') -%>
